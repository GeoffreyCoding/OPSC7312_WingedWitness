<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <!-- Outer LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Background Image ImageView -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/homepagebackground"/>

        <!-- Welcome TextView -->
        <TextView
            android:id="@+id/etWelcome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Welcome to WingedWitness"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:enabled="false"
            android:alpha="0.6"
            android:textSize="20dp"/>

        <!-- Inner LinearLayout for Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Hotspots Button -->
            <Button
                android:id="@+id/btnHotspots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hotspots"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"/>

            <!-- Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Go To Sightings Button -->
            <Button
                android:id="@+id/btnGoToSightings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Sighting"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"/>

            <!-- Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Account Button -->
            <Button
                android:id="@+id/btnAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"/>

            <!-- Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Play Game Button -->
            <Button
                android:id="@+id/btnPlayGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Quiz Game"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"/>

            <!-- Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"/>

            <!-- Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
